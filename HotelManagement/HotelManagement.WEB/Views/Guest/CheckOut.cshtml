@model HotelManagement.WEB.Models.CheckBookingModel
@{
	ViewBag.Title = "CheckOut";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CheckOut</h2>


@using (Html.BeginForm("CheckOut", "Guest", FormMethod.Post, new { }))
{
	@Html.ValidationSummary("", new { @class = "text-danger" })
	<div class="form-group my-2">
		@Html.DropDownListFor(m => m.GuestId, ViewBag.currentBookings as SelectList, new { @class="form-control"})
	</div>
	<button class="btn btn-primary" type="submit">Check in</button>
}

