							<div class="card-footer">
								@Html.ActionLink("Update guest", "UpdateGuest", "Guest", null, new { @class = "btn btn-primary" })
							</div>
						</div>
					</div>
					<div class="col">
						<div class="card m-2">
							<div class="card-header">
								DeleteGuest
							</div>
							<div class="card-body">
								DeleteGuest
							</div>
							<div class="card-footer">
								@Html.ActionLink("Delete guest", "DeleteGuest", "Guest", null, new { @class = "btn btn-primary" })
							</div>
						</div>
					</div>
					<div class="col"></div>
				</div>
			</div>
