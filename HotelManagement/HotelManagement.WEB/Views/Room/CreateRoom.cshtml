@model HotelManagement.WEB.Models.RoomCreateModel
@{
	ViewBag.Title = "CreateRoom";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateRoom</h2>


@using (Html.BeginForm("CreateRoom", "Room", FormMethod.Post, new { }))
{
	@Html.ValidationSummary(null, new { @class = "text-danger" })
	<div class="row my-2">
		<div class="form-group col-auto">
			@Html.DropDownListFor(model => model.HotelId, ViewBag.hotelList as SelectList, new { @class="form-select" })
		</div>
		<div class="form-group col-auto">
			@Html.DropDownListFor(model => model.TypeId, ViewBag.typeList as SelectList, new { @class = "form-select" })
		</div>
	</div>
	<div class="row my-2">
		<div class="form-group col-auto">
			@Html.LabelFor(model => model.RoomNumber, new { @class = "form-label" })
			@Html.TextBoxFor(model => model.RoomNumber, new { @class="form-control" })
		</div>
		<div class="form-group col-auto">
			@Html.LabelFor(model => model.RoomRate, new { @class = "form-label" })
			@Html.EditorFor(model => model.RoomRate, new { htmlAttributes = new{ @class="form-control", @type="number", @min="1", @step="any" }})
		</div>
	</div>
	<div class="row my-2">
		<div class="form-group col-auto">
			<button class="btn btn-primary" type="submit">Create</button>
		</div>
	</div>

}