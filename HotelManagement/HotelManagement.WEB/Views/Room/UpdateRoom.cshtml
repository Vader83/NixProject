@model HotelManagement.WEB.Models.RoomUpdateModel
@{
	ViewBag.Title = "UpdateRoom";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateRoom</h2>

@using (Html.BeginForm("UpdateRoom", "Room", FormMethod.Post, new { }))
{
	@Html.ValidationSummary(null, new { @class = "text-danger" })

	<div class="form-group">
		@Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @type = "number", @required = "true", min = "1" }})
		<button class="btn btn-primary" type="submit" name="action" value="get">Get room</button>
	</div>

	if (Model != null)
	{
		<div class="form-control">@Model.HotelName</div>
		<div class="row my-2">
			<div class="form-group col-auto">
				@Html.LabelFor(model => model.RoomNumber, new { @class = "form-label" })
				@Html.TextBoxFor(model => model.RoomNumber, new { @class = "form-control" })
			</div>
			<div class="form-group col-auto">
				@Html.LabelFor(model => model.RoomRate, new { @class = "form-label" })
				@Html.EditorFor(model => model.RoomRate, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
			</div>
		</div>
		<div class="row my-2">
			<div class="form-group col-auto">
				@Html.LabelFor(model => model.StatusId, new { @class = "form-label" })
				@Html.DropDownListFor(model => model.StatusId, ViewBag.statusList as SelectList, new { @class = "form-select", @value = Model.StatusId })
			</div>
			<div class="form-group col-auto">
				@Html.LabelFor(model => model.TypeId, new { @class = "form-label" })
				@Html.DropDownListFor(model => model.TypeId, ViewBag.typeList as SelectList, new { @class = "form-select", @value = Model.TypeId })
			</div>
		</div>
		<div class="row my-2">
			<div class="form-group col-auto">
				@Html.LabelFor(model => model.DoubleBedCount, new { @class = "form-label" })
				@Html.EditorFor(model => model.DoubleBedCount, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
			</div>
			<div class="form-group col-auto">
				@Html.LabelFor(model => model.SingleBedCount, new { @class = "form-label" })
				@Html.EditorFor(model => model.SingleBedCount, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
			</div>
		</div>
		<div class="row my-2">
			<div class="form-group col-auto">
				<button class="btn btn-primary" type="submit" name="action" value="update">Get room</button>
			</div>
		</div>
	}





}
