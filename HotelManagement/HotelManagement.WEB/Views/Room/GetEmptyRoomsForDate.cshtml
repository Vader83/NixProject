@model HotelManagement.WEB.Models.FindEmptyRoomModel
@{
	ViewBag.Title = "GetEmptyRoomsForDate";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetEmptyRoomsForDate</h2>

@using (Html.BeginForm("GetEmptyRoomsForDate", "Room", FormMethod.Post))
{
	@Html.ValidationSummary()
	<div class="row my-3">
		<div class="form-group">
			@Html.DropDownListFor(model => model.HotelId, ViewBag.hotelList as SelectList, new {@class="form-select"})
		</div>
	</div>
	<div class="row my-3">
		<div class="form-group col-auto">
			@Html.LabelFor(m => m.DateFrom, new {@class = "form-label"})
			@Html.EditorFor(m => m.DateFrom, new {htmlAttributes = new {@class = "form-control", @type = "date"}})
		</div>
		<div class="form-group col-auto">
			@Html.LabelFor(m => m.DateTo, new {@class = "form-label"})
			@Html.EditorFor(m => m.DateTo, new {htmlAttributes = new {@class = "form-control", @type = "date"}})
		</div>
	</div>
	<div class="row my-3">
		<div class="form-group">
			<input type="submit" value="Search" class="btn btn-primary"/>
		</div>
	</div>

}

@if (Model != null && Model.RoomsInfo != null)
{
	<div>
		<table class="table table-hover" style="background-color: orange">
			<thead>
			<tr>
				<th>Hotel</th>
				<th>Room number</th>
				<th>Status</th>
				<th>TypeName</th>
				<th>Double bed count</th>
				<th>Single bed count</th>
				<th>Rate</th>
			</tr>
			</thead>
			<tbody>
			@foreach (var item in Model.RoomsInfo)
			{
				<tr>
					<td>@item.HotelName</td>
					<td>@item.RoomNumber</td>
					<td>@item.StatusName</td>
					<td>@item.TypeName</td>
					<td>@item.DoubleBedCount</td>
					<td>@item.SingleBedCount</td>
					<td>@item.RoomRate</td>
				</tr>
			}
			</tbody>
		</table>
	</div>
}

