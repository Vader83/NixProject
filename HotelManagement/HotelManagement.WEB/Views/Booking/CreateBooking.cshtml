@model HotelManagement.WEB.Models.CreateBookingModel
@{
	ViewBag.Title = "CreateBooking";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateBooking</h2>

@using (Html.BeginForm("CreateBooking", "Booking", FormMethod.Post))
{
	@Html.ValidationSummary()
	<div class="row">
		<div class="form-group">
			@Html.LabelFor(model => model.RoomId, new { @class = "form-label" })
			@Html.DropDownListFor(model => model.RoomId, ViewBag.roomList as SelectList, new { @class = "form-select" })
		</div>
	</div>
	<div class="row">
		<div class="form-group col-auto">
			@Html.LabelFor(m => m.DateFrom, new { @class = "form-label" })
			@Html.EditorFor(m => m.DateFrom, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
		</div>
		<div class="form-group col-auto">
			@Html.LabelFor(m => m.DateTo, new { @class = "form-label" })
			@Html.EditorFor(m => m.DateTo, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
		</div>
	</div>
	<div class="row">
		<div class="form-group col-auto">
			@Html.LabelFor(m => m.Email, new { @class = "form-label" })
			@Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @type = "email", @required="true" } })
		</div>
		<div class="form-group col-auto">
			@Html.LabelFor(m => m.AdultQuantity, new { @class = "form-label" })
			@Html.EditorFor(m => m.AdultQuantity, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "1", @required = "true" } })
		</div>
		<div class="form-group col-auto">
			@Html.LabelFor(m => m.ChildQuantity, new { @class = "form-label" })
			@Html.EditorFor(m => m.ChildQuantity, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @required = "true" } })
		</div>
	</div>
	<input class="btn btn-primary" type="submit" value="Book now"/>
}