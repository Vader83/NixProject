@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic">
	<link rel="stylesheet" href="/Content/fonts/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.1.1/aos.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css">
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<nav class="navbar navbar-light navbar-expand-lg bg-primary sticky-top" id="AdminMainNav">
		<div class="container">
			@Html.ActionLink("Dream Hotel", "Index", "Home", null, new { @class = "navbar-brand" })
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#ResponsiveNav" aria-controls="ResponsiveNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="ResponsiveNav">
				<ul class="nav navbar-nav" style="margin-left: auto;">
					<li class="nav-item">
						@Html.ActionLink("Hotel Manager", "UserProfile", "Account", null, new { @class = "nav-link" })
					</li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							<i class="bi bi-list"></i>
						</a>
						<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
							<li>
								<button class="btn rounded-0 dropdown-item">
									@Html.ActionLink("Profile", "UserProfile", "Account", null, new { @class = "nav-link" })
								</button>
							</li>
							<li>
								<hr />
							</li>
							<li>
								<button class="btn rounded-0 dropdown-item">
									@Html.ActionLink("About us", "About", "Home", null, new { @class = "nav-link" })
								</button>
							</li>
							<li>
								<button class="btn rounded-0 dropdown-item">
									<a class="nav-link" href="#">Hotels</a>
								</button>
							</li>
							<li>
								<hr/>
							</li>
							<li>
								@using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right nav-link" }))
								 {
									@Html.AntiForgeryToken()
									<button class="btn rounded-0 dropdown-item" type="submit">
										<a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
									</button>
								 }
								
							</li>
						</ul>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<div class="container">
		@RenderBody()
	</div>

	<footer class="border-top p-4 mt-5" style="background-color: aquamarine">
		<div class="container-fluid row">
			<div class="col-md-6">
				<div class="row">
					<p class="h6 text-center text-md-start">&copy; 2021 by Oleynik Dmitriy</p>
				</div>
			</div>
			<div class="col-md-2">
				<div class="row text-center">
					<p class="h6">Call</p>
				</div>
				<div class="row text-center">
					<p class="h6">8-800-53-53-535</p>
				</div>
			</div>
			<div class="col-md-2">
				<div class="row text-center">
					<p class="h6">Write</p>
				</div>
				<div class="row text-center">
					<p class="h6">myemail@gmail.com</p>
				</div>
			</div>
			<div class="col-md-2">
				<div class="row text-center">
					<p class="h6">Follow</p>
				</div>
				<div class="row text-center">
					<a class="col-3 text-center" href="#"><i class="bi bi-github" style="font-size: 1.5rem; color: black;"></i></a>
					<a class="col-3 text-center" href="#"><i class="bi bi-facebook" style="font-size: 1.5rem; color: black;"></i></a>
					<a class="col-3 text-center" href="#"><i class="bi bi-instagram" style="font-size: 1.5rem; color: black;"></i></a>
					<a class="col-3 text-center" href="#"><i class="bi bi-linkedin" style="font-size: 1.5rem; color: black;"></i></a>
				</div>
			</div>
		</div>
	</footer>
	
	
	<script src="/Scripts/bs-init.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.1.1/aos.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
	<script src="/Scripts/creative.js"></script>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
